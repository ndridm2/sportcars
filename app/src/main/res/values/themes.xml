<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Sportcars" parent="Theme.Material3.DayNight">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary" type="color">@color/gray_light</item>
        <item name="colorPrimaryVariant" type="color">@color/white</item>
        <item name="colorOnPrimary" type="color">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary" type="color">@color/orange_light</item>
        <item name="colorSecondaryVariant" type="color">@color/orange_light</item>
        <item name="colorOnSecondary" type="color">@color/black</item>
    </style>

    <style name="Theme.Sportcars" parent="Base.Theme.Sportcars" />

    <style name="Theme.Sportcars.Fullscreen" parent="Theme.Sportcars">
        <item name="android:actionBarStyle">@style/Widget.Theme.Sportcars.ActionBar.Fullscreen
        </item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="ThemeOverlay.Sportcars.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>
</resources>